# Dockerfile for Mock Form Website
FROM python:3.11-slim

WORKDIR /app

# Install dependencies
RUN pip install --no-cache-dir fastapi uvicorn python-multipart

# Copy mock server code
COPY mock_sites/ /app/mock_sites/

# Expose port
EXPOSE 8080

# Run server
CMD ["uvicorn", "mock_sites.server:app", "--host", "0.0.0.0", "--port", "8080"]
