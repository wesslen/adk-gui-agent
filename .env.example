
# GUI Agent Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# LLM Authentication (Option 1: API Key - simpler for development)
# =============================================================================
# If set, uses Google AI Studio directly
# GOOGLE_API_KEY=your-api-key-here

# =============================================================================
# LLM Authentication (Option 2: Vertex AI - recommended for production)
# =============================================================================
# If GOOGLE_API_KEY is not set, these are used instead
GOOGLE_GENAI_USE_VERTEXAI=TRUE
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_CLOUD_LOCATION=us-central1

# =============================================================================
# Model Configuration
# =============================================================================
MODEL_NAME=gemini-2.5-flash
# Alternative: gemini-2.0-flash, gemini-1.5-pro

# =============================================================================
# Playwright MCP Server
# =============================================================================
# When running Playwright MCP as a Docker container
PLAYWRIGHT_MCP_URL=http://localhost:3000/sse

# Browser mode: headless (for GCP Cloud Shell) or headed (local dev)
BROWSER_HEADLESS=true

# =============================================================================
# Observability - Arize Phoenix
# =============================================================================
PHOENIX_HOST=localhost
PHOENIX_PORT=6006
PHOENIX_COLLECTOR_ENDPOINT=http://localhost:6006/v1/traces

# Enable/disable tracing
ENABLE_TRACING=true

# =============================================================================
# Agent Configuration
# =============================================================================
# Maximum steps the agent can take per task
MAX_AGENT_STEPS=20

# Timeout for browser operations (seconds)
BROWSER_TIMEOUT=30

# =============================================================================
# Mock Server (for testing)
# =============================================================================
MOCK_SERVER_HOST=localhost
MOCK_SERVER_PORT=8080
